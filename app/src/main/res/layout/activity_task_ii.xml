<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_task_ii"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uwm.ibidder.Activities.TaskActivityII">


    <android.support.design.widget.TabLayout
        android:id="@+id/taskTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LabelColor"
        app:tabTextColor="@android:color/background_light"
        app:tabSelectedTextColor="@color/colorAccent">

    </android.support.design.widget.TabLayout>



    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager"
        android:layout_below="@+id/taskTabLayout">

    </android.support.v4.view.ViewPager>

    <android.support.v7.widget.Toolbar
        android:id="@+id/TaskToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/LabelColor"
        android:popupTheme="@style/AppTheme.AppBarOverlay"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >


        <Button
            android:id="@+id/buttomCompleteTask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/complete_task"
             />
        <Button
            android:id="@+id/buttonReportTask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/report_task"
            />
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
