<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uwm.ibidder.TaskActivity">
    <Button
        android:id="@+id/button_taskActEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:layout_gravity="right"
        android:visibility="invisible"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_task_layout_name_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Task Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_taskActName"/>

        <TextView
            android:text="by."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <TextView
            android:text="Task Owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_taskActPoster" />

    </LinearLayout>

    <TextView
        android:text="Task Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_taskActDescr" />

    <TextView
        android:text="Expire time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_taskActEndtime"
        android:layout_marginBottom="50dp"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_task_layout_lowest_bidder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="$ Lowest Bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_taskActLowestBid"/>

        <TextView
            android:text="by."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />


        <TextView
            android:text="Lowest Bidder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/label_taskActLowestBidder" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:focusable="false"
        android:id="@+id/editText_taskActUserBid"
        android:background="@color/lightgray"
        android:hint="$ Place a bid"/>

    <Button
        android:text="Bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_taskActBidSubmit" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="edu.uwm.ibidder.Fragments.BidderListFragment"
        android:id="@+id/Bidder_list_Fragment_Container"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button_taskActBidSubmit" />
</LinearLayout>
