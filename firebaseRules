{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },

    "tasks": {
      ".read": "auth !== null",
    	".write": "auth !== null",

      "$taskid": {
        ".read": "auth !== null",
        ".write": "newData.child('ownerId').val() === auth.uid",

        "bidIds": {
          ".read": "auth !== null",
          ".write": "auth !== null"
        }
      }
    }
  }
}